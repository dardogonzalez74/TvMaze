<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.TVMazeSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/gray_100</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.TVMaze</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.TVMaze" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_500</item>
        <item name="colorPrimaryVariant">@color/gray_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_000</item>
        <item name="colorSecondaryVariant">@color/gray_100</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>
</resources>